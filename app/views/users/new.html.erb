<h1>New User Account</h1>

<form action="/users" method="post">
  
    <div class = "mb-3">
      <label for="username_input" class="form-label">Username</label>
      <input type="text" class="form-control" name="username" id="username_input">
    </div>
  
    <div class = "mb-3">
      <label for="email_input" class="form-label">Email</label>
      <input type="text" class="form-control" name="email" id="email_input">
    </div>
    
    <div class = "mb-3">
      <label for="password_input" class="form-label">Password</label>
      <input type="password" class="form-control" name="password" id="password_input">
    </div>
  

  <button class="btn btn-primary">Signup</button>
  
</form>
