<h1>New Place</h1>

<% if @current_user != nil %>
  <form action="/places" method="post">

    <div class = "mb-3">
      <label for="place_input" class="form-label">Name of New Place</label>
      <input type="text" class="form-control" name="name" id="name_input" placeholder="Add Name Here">
    </div>
  
    <button class="btn btn-primary">Save</button>
    <a href="/">Cancel</a>
  </form>

  <% else %>
    You must first <a href="/login">login</a> to add a new place.
  <% end %>
  
