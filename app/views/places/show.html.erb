<h1><%= @place["name"] %></h1>

<div class="row"> 

  

    <h2>My Entries</h2>
    <% for entry in @entries %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <h3><%= entry["title"] %></h3>
        <h4><%= entry["occurred_on"] %></h4>
        <p><%= entry["description"] %></p>
        <p> <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid"></p>
    <% end %>
      </div>
      <p>
        <a href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
      </p>

      <p>
        <a href="/places">Back to All Places</a>
      </p>
    
  
    You must first <a href="/login">login</a> to view the entries for <%= @place["name"] %>.
  

</div>